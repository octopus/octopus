sub semicore_PP() {

  $configurations = <<'EOF';
 3     Li_sc       ; 1s^2 2s^1
 4     Be_sc       ; 1s^2 2s^2
11     Na_sc       1s^2 ; 2s^2 2p^6 3s^1
12     Mg_sc       1s^2 ; 2s^2 2p^6 3s^2
19     K_sc        1s^2 2s^2 2p^6 ; 3s^2 3p^6 4s^1
20     Ca_sc       1s^2 2s^2 2p^6 ; 3s^2 3p^6 4s^2
