# -*- coding: utf-8 -*-
#
# $Id$
#
# This input file propagates a 1D Gaussian wavepacket through
# left and right transparent boundaries.
# The kinetic energy is calculated by a nine-point formula.

ParallelizationStrategy = par_kpoints

%MeshBlockSize
 1 | 1 | 1
%

ExperimentalFeatures = yes

ci = {0, 1}

%CalculationMode
 gs      | gs      | td
 "lead_" | "flat_" | "flat_"
 1       | 2       | 3
%

FromScratch = yes

TheoryLevel = independent_particles
Dimensions = 1
BoxShape = parallelepiped
DerivativesOrder = 4
Spacing = 0.1

TDTimeStep = 0.05
TDMaximumIter = 300
TDPropagator = crank_nicholson_src_mem

%Species
 "flat" | 0 | spec_user_defined | 2.0 | "0"
%


# The lead.
lead_PeriodicDimensions = 1
%lead_Coordinates
 "flat" | 0
%
%lead_Lsize
 DerivativesOrder/2*Spacing
%

%KPointsGrid 
  2
-1/2
%
KPointsUseSymmetries = false

lead_Output = potential
lead_OutputHow = binary


# The central region.
%flat_OpenBoundaries
 lead_dataset     | "lead_"
 lead_restart_dir | "lead_restart"
 lead_static_dir  | "lead_static"
 add_unit_cells   | 0
 td_pot_formula   | "0.0"   | "0.0"
%
%flat_Coordinates
 "flat" | 0
%
%flat_Lsize
 10
%

# TD settings.
flat_OnlyUserDefinedInitialStates = yes
%flat_UserDefinedStates
 1 | 1 | 1 | formula | "exp(-0.1*x*x)*exp(-ci*0.9*x)"
 1 | 1 | 2 | formula | "exp(-0.1*x*x)*exp(ci*0.9*x)"
%

flat_OpenBoundariesAdditionalTerms = mem_term

%flat_CurrentThroughPlane
   0.0 # origin
%

Output = density
OutputHow = binary
OutputEvery = 100

TDEnergyUpdateIter = 100


