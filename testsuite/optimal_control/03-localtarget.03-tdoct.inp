# -*- coding: utf-8 mode: shell-script -*-


Dimensions = 1
fromScratch = yes

CalculationMode = opt_control

ExperimentalFeatures = yes

# ------------------
# Grid
# ------------------
BoxShape = sphere
Spacing = 0.3
Radius =  8.0


# ------------------
# System
# ------------------
%Species
"ADW1D" | species_user_defined | potential_formula | "1/64*(x)^4-1/4*(x)^2+1/256*(x)^3" | valence | 1
%

%Coordinates
"ADW1D" | 0
%

TheoryLevel = independent_particles


# ------------------
# TD RUN Parameters
# ------------------

stime  = 25.0
dt = 0.01
TDPropagator = crank_nicolson
TDMaxSteps = stime/dt
TDTimeStep = dt


# --------------
# OCT parameters
# --------------

OCTControlFunctionRepresentation = control_fourier_series

OCTPenalty = 1.0
OCTMaxIter = 1

OCTInitialState = oct_is_groundstate
OCTTargetOperator = oct_tg_td_local

# This could also be a function of time.
%OCTTDTarget
"exp(-(x-1)^2)"
%

OCTScheme = oct_bfgs
OCTControlFunctionOmegaMax = 0.40

OCTDirectStep = 0.1

# The accuracy of the gradient can be checked uncommenting this
#OCTCheckGradient = 1.0e-5

OCTDoubleCheck = no

#----------------------------
# Laser field = Initial guess
#-----------------------------

%TDExternalFields
electric_field | 1 | 0 | 0 | 0.0 | "envelope_function"
%

%TDFunctions
"envelope_function" | tdf_from_expr | "0.1*sqrt(2/stime)*sin((2*pi/stime)*t)"
%

ProfilingMode = prof_time

DisableAccel = yes
