match ;  Eigenvalues sum     ; GREPFIELD(static/info, 'Eigenvalues =', 3) ; -0.1462212
match ;  Hartree energy      ; GREPFIELD(static/info, 'Hartree     =', 3) ; 0.54745179
match ;  Exchange energy     ; GREPFIELD(static/info, 'Exchange    =', 3) ; -2.03481113
match ;  Correlation energy  ; GREPFIELD(static/info, 'Correlation =', 3) ; -0.37504817
match ;  Kinetic energy      ; GREPFIELD(static/info, 'Kinetic     =', 3) ; 3.11824967
match ;  External energy     ; GREPFIELD(static/info, 'External    =', 3) ; -1.26933112
match ;  Hubbard energy      ; GREPFIELD(static/info, 'Hubbard     =', 3) ; 0.02765829

match ;  U 3p Si1   ; LINEFIELD(static/effectiveU, 3, 4) ; 0.088716
match ;  U 3p Si2   ; LINEFIELD(static/effectiveU, 4, 4) ; 0.088716

match ;  V 3p-3p  ; GREPFIELD(static/info, 'Effective intersite V', 7, 3) ; 0.055784

