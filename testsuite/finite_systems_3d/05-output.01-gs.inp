# -*- coding: utf-8 mode: shell-script -*-

CalculationMode = gs
fromScratch = yes

UnitsOutput = ev_angstrom

Radius = 5.0
Spacing = 0.5

%Coordinates
  "H" | 0 | 0 | 0
%

%Output 
 density            | "output_format"  | axis_x + plane_x + dx       | "output_interval" | 2
 geometry           | "output_format"  | xyz + xcrysden
 wfs                | "output_format"  | axis_x + plane_x + xcrysden
 potential_gradient | "output_format"  | plane_x
%

OutputInterval = 4
OutputDuringSCF = yes
# for Bader parallel in domains
ExperimentalFeatures = yes

FilterPotentials = filter_none

MixField = density
StatesPack = yes
