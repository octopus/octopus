# -*- coding: utf-8 mode: shell-script -*-

CalculationMode = gs
fromScratch = yes

UnitsOutput = ev_angstrom

Radius = 5.0
Spacing = 0.5

%Coordinates
  "H" | 0 | 0 | 0
%

%Output 
 density | axis_x + plane_x + dx
 geometry | xyz + xcrysden
 wfs | axis_x + plane_x + xcrysden
 potential_gradient |  plane_x
 potential | plane_x
%

OutputInterval = 4
OutputDuringSCF = yes
# for Bader parallel in domains
ExperimentalFeatures = yes

FilterPotentials = filter_none

MixField = density
StatesPack = yes
