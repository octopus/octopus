DebugLevel = 0

CalculationMode = gs
fromScratch = yes

%Coordinates
"Ar" | 0 | 0 | 0
%

spacing = 0.32
radius = 12.0

XFunctional = lda_x
CFunctional = lda_c_xalpha
XAlpha = 2/3
SICCorrection = sic_pz
OEP_Level = oep_kli

EigenSolver = cg_new
EigenSolverInitTolerance = 1e-2
EigenSolverFinalTolerance = 1e-5
EigenSolverFinalToleranceIteration = 6
EigenSolverMaxIter = 25

# With orbital dependent xc potentials, one should mix the potential.
What2Mix = potential

ConvRelDens = 1.0e-5

TypeOfMixing = broyden

PoissonSolver = fft_corrected
