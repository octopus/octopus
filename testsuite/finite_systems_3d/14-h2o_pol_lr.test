# -*- coding: utf-8 mode: shell-script -*-
# $Id$

Test     : Linear Response Polarizabilities
Author   : Xavier Andrade
Date     : 18.10.05
Arch     : Linux bizet 2.6.8-2-686 #1 Thu May 19 17:53:30 JST 2005 i686 GNU/Linux
Release  : 2.2.0pre1
Programs : octopus
Runtime  : short-run
Enabled  : Yes

Input: 14-h2o_pol_lr.01_h2o_gs.inp

Match ; TotalEnergy               ; grep -A 7 '^Energy:' static/info ; \s*Total\s*=\s*-16.06
Match ; Ground State Eigenvalues  ; grep -A 2 'Eigenvalues \[' static/info | tail -1 ; \s*-1.16\d*\s*2.0000\d* 

Input: 14-h2o_pol_lr.02_h2o_dyn_pol.inp
Match ; Polarizability XX w=0.0   ; head -2 linear/freq_0.000/alpha | tail -1 ; \s*15.22
Match ; Polarizability YY w=0.0   ; head -3 linear/freq_0.000/alpha | tail -1 ; \s*12.33
Match ; Polarizability ZZ w=0.0   ; head -4 linear/freq_0.000/alpha | tail -1 ; \s*23.04

Match ; Polarizability XX w=0.1   ; head -2 linear/freq_0.100/alpha | tail -1 ; \s*15.91
Match ; Polarizability YY w=0.1   ; head -3 linear/freq_0.100/alpha | tail -1 ; \s*12.85
Match ; Polarizability ZZ w=0.1   ; head -4 linear/freq_0.100/alpha | tail -1 ; \s*29.50

Input: 14-h2o_pol_lr.03_h2o_dyn_pol_cmplx.inp
Match ; Restart                   ; grep -c "Could not load response wave-functions" out ; \s*0
Match ; Polarizability XX w=0.0   ; head -2 linear/freq_0.000/alpha | tail -1 ; \s*15.20
Match ; Polarizability YY w=0.0   ; head -3 linear/freq_0.000/alpha | tail -1 ; \s*12.32
Match ; Polarizability ZZ w=0.0   ; head -4 linear/freq_0.000/alpha | tail -1 ; \s*23.00

Match ; Polarizability XX w=0.1   ; head -2 linear/freq_0.100/alpha | tail -1 ; \s*15.90
Match ; Polarizability YY w=0.1   ; head -3 linear/freq_0.100/alpha | tail -1 ; \s*12.84
Match ; Polarizability ZZ w=0.1   ; head -4 linear/freq_0.100/alpha | tail -1 ; \s*29.19

Match ; Cross Section     w=0.1   ; grep -v \# linear/freq_0.100/cross_section ; \s*0.671

Input: 14-h2o_pol_lr.04_h2o_hpol.inp
Match ; Hyperpolarizability w=0.0 ; grep parallel linear/freq_0.000/beta ; \s*2304
Match ; Hyperpolarizability w=0.1 ; grep parallel linear/freq_0.100/beta ; \s*10756
