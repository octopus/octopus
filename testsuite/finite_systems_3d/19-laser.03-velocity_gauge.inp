# -*- coding: utf-8 mode: shell-script -*-
# $Id:  $

CalculationMode = td
Units = "a.u"
FromScratch = yes

bondlength = 1.7/0.529177

%Coordinates
"Na" | 0.0 | 0.0 |  bondlength | yes
"Na" | 0.0 | 0.0 | -bondlength | yes
%

BoxShape = sphere
Radius  = 8.0/0.529177
Spacing = 0.3/0.529177

ExcessCharge = 1
TheoryLevel = independent_particles

MaximumIter = 200
ConvAbsDens = 1e-6

LCAOStart = yes

EigenSolver = cg
EigenSolverInitTolerance = 1e-2
EigenSolverFinalTolerance = 1e-6
EigenSolverFinalToleranceIteration = 6
EigenSolverMaxIter = 25

TypeOfMixing = broyden

T = 0.20
dt = 0.01
TDMaximumIter = T/dt
TDEvolutionMethod = exp_mid
TDExponentialMethod = lanczos
TDExpOrder = 20
TDTimeStep = dt

omega = 0.1
electric_amplitude = 1.0
p_c = 137.036
vector_amplitude = -P_c*electric_amplitude/omega
%TDExternalFields
vector_potential   | 0 | 0 | 1 | envelope_constant | vector_amplitude | omega
vector_potential   | 0 | 0 | 1 | envelope_constant | -vector_amplitude | 0.0
%

AbsorbingBoundaries = no
MoveIons = no

TDOutput = laser + energy + multipoles
OutputEvery = 10
