Test       : Sodium static polarizability
Programs   : octopus
TestGroups : long-run
Enabled    : Yes


Input: 05-polarizability.01-gs.inp
match ; Total energy   ; GREP(static/info, 'Total       =', 20) ; -11.40377627
match ; Eigenvalue     ; GREP(static/info, '1   --', 12) ;  -3.178226
match ; Occupation     ; GREP(static/info, '1   --', 28) ;   2.032697
match ; Eigenvalue     ; GREP(static/info, '2   --', 12) ;  -1.836886
match ; Occupation     ; GREP(static/info, '2   --', 28) ;  -0.032680

Input: 05-polarizability.02-sternheimer.inp
Precision: 0.001
match ; Polarizability xx ; LINE(linear/freq_0.0000/alpha, 2,  1) ; 48.662972
match ; Polarizability yy ; LINE(linear/freq_0.0000/alpha, 3, 28) ; 27.001112
match ; Polarizability zz ; LINE(linear/freq_0.0000/alpha, 4, 45) ; 27.001112

Input: 05-polarizability.03-finite-diff.inp
match ; Polarizability xx ; LINE(linear/alpha, 2,  1) ; 48.663362
match ; Polarizability yy ; LINE(linear/alpha, 3, 28) ; 27.001859
match ; Polarizability zz ; LINE(linear/alpha, 4, 45) ; 27.001852

