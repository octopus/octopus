CalculationMode = vdw

FromScratch = yes


PseudopotentialSet = hgh_lda

%Coordinates
  "He" | 0 | 0 | 0 
%

Radius  = 7.0
Spacing = 0.24

LRConvAbsDens = 1.0e-3

# Using the bicgstab solver because the default is much 
# slower for vdw calculations
LinearSolver = bicgstab
LinearSolverTol = 1.0e-4


FilterPotentials = filter_none

MixField = density
