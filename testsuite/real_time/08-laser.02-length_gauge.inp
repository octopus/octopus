# -*- coding: utf-8 mode: shell-script -*-
# $Id:  $

CalculationMode = td
FromScratch = yes

bondlength = 1.7/0.529177

%Coordinates
"Na" | 0.0 | 0.0 |  bondlength 
"Na" | 0.0 | 0.0 | -bondlength 
%

BoxShape = sphere
Radius  = 8.0/0.529177
Spacing = 0.3/0.529177

ExcessCharge = 1
TheoryLevel = independent_particles

T = 0.20
dt = 0.01
TDMaximumIter = T/dt
TDPropagator = exp_mid
TDExponentialMethod = lanczos
TDExpOrder = 20
TDTimeStep = dt

omega = 0.1
electric_amplitude = 1.0

%TDExternalFields
electric_field   | 0 | 0 | i | omega | "envelope_function"
%

%TDFunctions
"envelope_function" | tdf_cw | electric_amplitude
%

AbsorbingBoundaries = no
MoveIons = no

TDOutput = laser + energy + multipoles
OutputEvery = 10
