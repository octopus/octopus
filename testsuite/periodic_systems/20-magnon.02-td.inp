CalculationMode = td
ExperimentalFeatures = yes
FromScratch = yes

PeriodicDimensions = 3

a =  2.856*angstrom

PseudopotentialSet = pseudodojo_lda

Spacing = 0.4


%LatticeParameters
  a | a | a
%

%LatticeVectors
 -0.5| 0.5 | 0.5
 0.5 |-0.5 | 0.5
 0.5 | 0.5 |-0.5
%

%ReducedCoordinates
 "Fe" |   0.0    | 0.0     | 0.0 
%

%KPointsGrid
 2 | 2 | 2
%

ExtraStates = 3
RestartFixedOccupations = yes

SpinComponents = spinors
TDDeltaStrength = 0.01
TDDeltaStrengthMode = kick_magnon
%TDMomentumTransfer
 0 | 0 | 2*pi/a
%
%TDEasyAxis
 0 | 0 | 1
%
TDPolarizationDirection = 3
TDTimeStep = 0.1
TDPropagator = aetrs
TDExponentialMethod = lanczos
TDExpOrder = 16
TDPropagationTime = 10
RestartWriteInterval = 100
SpiralBoundaryCondition = yes

TDOutput = total_magnetization + energy
