CalculationMode = gs
ExperimentalFeatures = yes
FromScratch = yes
UnitsOutput = eV_Angstrom
ConvAbsDens = 1e-6
BoxShape = parallelepiped
%Lsize
	3.0*angstrom  | 4.0*angstrom  | 3.0*angstrom 
%
Spacing = angstrom*0.3
ExcessCharge = -1
PseudopotentialSet = standard
%Species
    'Li' | species_pseudo   | lmax | 0 | lloc | 0 
%
%Coordinates
    'Li' | 0.0 | -2.0*angstrom  | 0.0 | no 
%
TnaddFunctional = lda_k_tf
%SubSystems
    'H2O' | frozen | 'static/fh2o' | qshep
%
%SubSystemCoordinates
    'H2O' | 0.0 | 1.0000*angstrom  | 0.0 | -pi/2.0
%

